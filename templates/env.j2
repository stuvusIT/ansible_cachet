; {{ ansible_managed }}

APP_ENV=production
APP_DEBUG=false
APP_URL={{ cachet_url }}
{{ appkey_fetched.stdout | default(appkey_generated.stdout) }}

DB_DRIVER=mysql
DB_HOST={{ cachet_mysql_host }}
DB_DATABASE={{ cachet_mysql_name }}
DB_USERNAME={{ cachet_mysql_user }}
DB_PASSWORD={{ cachet_mysql_pass }}
DB_PORT={{ cachet_mysql_port }}
DB_PREFIX={{ cachet_mysql_prefix }}

CACHE_DRIVER={{ cachet_cache_driver }}
SESSION_DRIVER={{ cachet_session_driver }}
QUEUE_DRIVER={{ cachet_queue_driver }}
CACHET_EMOJI={{ cachet_emoji | lower }}
CACHET_BEACON={{ cachet_beacon | lower }}

MAIL_DRIVER={{ cachet_mail_driver }}
MAIL_HOST={{ cachet_mail_host }}
MAIL_PORT={{ cachet_mail_port }}
MAIL_USERNAME={{ cachet_mail_username }}
MAIL_PASSWORD={{ cachet_mail_password }}
MAIL_ADDRESS={{ cachet_mail_address }}
MAIL_NAME={{ cachet_mail_name }}
MAIL_ENCRYPTION={{ cachet_mail_encryption }}

REDIS_HOST={{ cachet_redis_host }}
REDIS_DATABASE={{ cachet_redis_database }}
REDIS_PORT={{ cachet_redis_port }}

GITHUB_TOKEN={{ cachet_github_token }}
